<div class="d-flex align-items-center justify-content-between">
    <button id="btn-copy_translate" class="btn btn-success btn-sm" style="visibility: hidden;">Sao Chép</button>
    <button id="btn-copy_update" class="btn btn-success btn-sm" style="visibility: hidden;">Sao Chép</button>

    <div class="row">
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="api">Server API:</label>
                <select class="form-select form-select-sm" id="api">
                    <option value="0" selected>API 1</option>
                    <option value="1">API 2</option>
                    <option value="2">API 3</option>
                </select>
            </div>
        </div>
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="textLimit">Giới hạn văn bản:</label>
                <select class="form-select form-select-sm" id="textLimit">
                    <option value="5000">5000</option>
                    <option value="4500" selected>4500</option>
                    <option value="4000">4000</option>
                    <option value="3000">3000</option>
                    <option value="2000">2000</option>
                    <option value="1000">1000</option>
                </select>
            </div>
        </div>
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="spaceRow">Khoản cách:</label>
                <select class="form-select form-select-sm" id="spaceRow">
                    <option value="2" selected>2</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <div class="col-auto">
            <div id="btnTranslateGroup" class="btn-group btn-group-sm d-none">
                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#modal-translate">
                    <i class="fa-regular fa-sliders"></i>
                </button>

                <button id="btn-translate" class="btn btn-sm btn-success text-nowrap">Bắt đầu dịch</button>
            </div>

            <div id="btnUpdateGroup" class="btn-group btn-group-sm d-none">
                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#modal-update">
                    <i class="fa-regular fa-sliders"></i>
                </button>

                <button id="btn-update" class="btn btn-sm btn-success text-nowrap">Bắt đầu dịch</button>
            </div>
        </div>
    </div>
</div>

<div id="progressTranslate" class="progress mt-2 d-none" style="height: 10px;">
    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0"
        aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
    </div>
</div>

<div id="progressUpdate" class="progress mt-2 d-none" style="height: 10px;">
    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0"
        aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
    </div>
</div>
{
  "productName": "translatecraft",
  "version": "1.0.0",
  "identifier": "com.alr.translatecraft",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TranslateCraft",
        "width": 1300,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

<input class="mb-3 mt-3 form-control form-control-sm w-25" type="file" id="translate-openFiles">

<div class="row">
    <!-- Các box văn bản và kết quả -->
    <div class="col-5">
        <div class="mb-3">
            <label for="transText">Hoặc dán văn bản vào đây:</label>
            <textarea id="transText" class="form-control form-control-sm"
                style="height: 210px;resize: none;"></textarea>
            <div class="d-flex justify-content-between">
                <span id="transTextError" class="text-danger"></span>
                <span id="transTextCount"></span>
            </div>
        </div>

        <div>
            <label for="transResult">Kết quả:</label>
            <textarea id="transResult" readonly class="form-control form-control-sm"
                style="height: 210px;resize: none;"></textarea>
            <div class="d-flex justify-content-between">
                <span id="transResultError" class="text-danger"></span>
                <span id="transResultCount"></span>
            </div>
        </div>
    </div>
    <!-- Bảng so sánh và chỉnh sửa -->
    <div class="col-7">
        <p class="mb-0">Bảng so sánh dữ liệu:</p>
        <div class="tableScroll border rounded-1" style="height: 460px;">
            <table id="tb_translate" class="table table-sm table-hover border-start border-end"
                style="table-layout: auto;">
                <thead class="">
                    <tr class="table-active">
                        <th scope="col">Khoá</th>
                        <th scope="col">Văn bản gốc</th>
                        <th scope="col">Văn bản đã dịch</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tb_translateBody">
                </tbody>
                <script type="text/x-handlebars-template" id="tb_translate-Template">
                    %#if dataTable%
                        %#each dataTable%
                            <tr>
                                <td class="key-column">%key%</td>
                                <td class="value-column">%value%</td>
                                <td style="width: 275px;">
                                    <textarea class="form-control overflow-y-hidden" style="height: 17px;"
                                        oninput="updateTextTranslated(this, '#transResult', '#spaceRow')">%translated%</textarea>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <button class="btn btn-sm btn-secondary" onclick="recoveryTextTranslated(this)">
                                            <i class="fa-solid fa-rotate-left"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        %/each%
                    %/if%
                </script>
            </table>
        </div>
    </div>
</div>

<!-- Các nút và tuỳ chọn dịch -->
<div class="d-flex align-items-center justify-content-between">
    <button id="btn-copy" class="btn btn-success btn-sm" style="visibility: hidden;">Sao Chép</button>

    <div class="row">
        <!-- Server api -->
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="api">Server API:</label>
                <select class="form-select form-select-sm" id="api">
                    <option value="0" selected>API 1</option>
                    <option value="1">API 2</option>
                    <option value="2">API 3</option>
                </select>
            </div>
        </div>
        <!-- Giới hạn văn bản -->
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="textLimit">Giới hạn văn bản:</label>
                <select class="form-select form-select-sm" id="textLimit">
                    <option value="5000">5000</option>
                    <option value="4500" selected>4500</option>
                    <option value="4000">4000</option>
                    <option value="3000">3000</option>
                    <option value="2000">2000</option>
                    <option value="1000">1000</option>
                </select>
            </div>
        </div>
        <!-- Khoán cách đầu ra mỗi dòng -->
        <div class="col-auto">
            <div class="d-flex align-items-center text-nowrap">
                <label class="me-2" for="spaceRow">Khoản cách:</label>
                <select class="form-select form-select-sm" id="spaceRow">
                    <option value="2" selected>2</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <!-- Nút dịch -->
        <div class="col-auto">
            <div class="btn-group btn-group-sm">
                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#modal-setting">
                    <i class="fa-regular fa-sliders"></i>
                </button>

                <button id="btn-translate" class="btn btn-sm btn-success text-nowrap">Bắt đầu dịch</button>
            </div>
        </div>
    </div>
</div>

<!-- Thanh tiến trình -->
<div id="progressTranslate" class="progress mt-2 d-none">
    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0"
        aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
    </div>
</div>

<!-- Modal -->
<div id="modal-setting" class="modal modal-lg fade" aria-labelledby="modal-setting" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header p-2">
                <h5 class="modal-title w-100 text-center fw-bold">Tuỳ chọn dịch</h5>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-center">
                    <p class="m-0">Dịch các cặp trong danh sách</p>

                    <div class="form-check form-switch form-check-list">
                        <input class="form-check-input pointer" type="checkbox" role="switch" id="filterType">
                        <label class="form-check-label pointer no-copy" for="filterType"></label>
                    </div>
                </div>

                <textarea id="filterContent" class="form-control form-control-sm"
                    placeholder="Nhập các từ khóa cách nhau bằng dấu phẩy. Ví dụ: abc, bdf, ..."></textarea>

                <div class="tableScroll border rounded-1 mt-3" style="height: 350px;">
                    <table id="tb_filter" class="table table-sm table-hover border-start border-end"
                        style="table-layout: auto;">
                        <thead>
                            <tr class="table-active">
                                <th scope="col">Keys</th>
                                <th scope="col">Values</th>
                            </tr>
                        </thead>
                        <tbody id="tb_filterBody"></tbody>
                        <script type="text/x-handlebars-template" id="tb_filter-Template">
                            %#if dataTable%
                            %#each dataTable%
                                <tr>
                                    <td class="key-column" style="max-width: 300px;">%key%</td>
                                    <td class="value-column">%value%</td>
                                </tr>
                            %/each%
                            %/if%
                        </script>
                    </table>
                </div>

            </div>
            <div class="modal-footer p-1">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal"
                    style="width: 100px;">Đóng</button>
            </div>
        </div>
    </div>
</div>
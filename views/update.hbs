<div class="d-flex justify-content-between align-items-center">
    <input class="mt-3 form-control form-control-sm w-25" type="file" id="update-openFiles">

    <div class="form-check form-switch">
        <input class="form-check-input pointer" type="checkbox" role="switch" id="showText">
        <label class="form-check-label pointer no-copy" for="showText">Xem văn bản</label>
    </div>
</div>

<div id="textarea-container" class="row mt-3">
    <div class="col">
        <textarea id="textUpdate" class="form-control form-control-sm" style="height: 150px;"></textarea>
    </div>
    <div class="col">
        <textarea id="textOld" class="form-control form-control-sm" style="height: 150px;"></textarea>
    </div>
    <div class="col">
        <textarea id="textTranslated" class="form-control form-control-sm" style="height: 150px;"></textarea>
    </div>
</div>

<div class="row mt-3">
    <div class="col-5">
        <textarea id="updateResult" class="form-control form-control-sm"></textarea>
    </div>

    <div class="col-7">
        <table>
            <table id="tb_update" class="table table-sm table-hover border-start border-end"
                style="table-layout: auto;">
                <thead class="">
                    <tr class="table-active">
                        <th scope="col">Khoá</th>
                        <th scope="col">Văn bản gốc</th>
                        <th scope="col">Văn bản đã dịch</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tb_updateBody">
                </tbody>
                <script type="text/x-handlebars-template" id="tb_update-Template">
                    %#if dataTable%
                        %#each dataTable%
                            <tr>
                                <td class="key-column">%key%</td>
                                <td class="value-column">%value%</td>
                                <td style="width: 275px;">
                                    <textarea class="form-control overflow-y-hidden" style="height: 17px;"
                                        oninput="updateTextTranslated(this)">%translated%</textarea>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <button class="btn btn-sm btn-secondary" onclick="recoveryTextTranslated(this)">
                                            <i class="fa-solid fa-rotate-left"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        %/each%
                    %/if%
                </script>
            </table>
        </table>
    </div>
</div>



